extends layout.pug

include utils.pug
  append head
    link(rel='stylesheet' href='/stylesheets/sign-up.css')
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet")
    script(src="/javascripts/sign-up-demo-user.js" type="module")

block content
  div(class='sign-up-panel-holder')
    div(id='left-sign-up-container')
      .logo-container
        a.logo(href="/")
      div(id='left-sign-up')
        div.image-container
          img(src="../assets/images/undraw6.svg", class="sign-up-image")
        p(id="p-text") It's no <span>cowincidence</span> that you're here, sign up today!
    div(id='right-sign-up-container')
      div(id='right-sign-up')
        div(id="form-contents")
          form.first-form(action='/users/signup' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            +field(null, 'firstName', user.firstName, null, "First Name")
            if errors
              if errors.firstName
                p(class="errors")= errors.firstName
            +field(null, 'lastName', user.lastName, null, "Last Name")
            if errors
              if errors.lastName
                p(class="errors")= errors.lastName
            +field(null, 'email', user.email, null, "Email")
            if errors
              if errors.email
                p(class="errors")= errors.email
            +field(null, 'username', user.username, null, "Username")
            if errors
              if errors.username
                p(class="errors")= errors.username
            +field(null, 'password', null, "password", "Password")
            if errors
              if errors.password
                p(class="errors")= errors.password
            +field(null, 'confirmPassword', null, "password", "Confirm Password")
            if errors
              if errors.confirmPassword
                p(class="errors")= errors.confirmPassword
            div(id="sign-up-button")
              button(type='submit' id="register") Sign up!
              p(id="orOption") Already have an account?
              a(href="/users/login" id="login-button") Login
  form(action="/users/login" method="post")
    input(type='hidden' name='_csrf' value=csrfToken)
    input(type='hidden' name="email" value="demouser@gmail.com")
    input(type='hidden' name='password' value="Demo1!")
    button(type= "submit" id="demo-button") Demo User
