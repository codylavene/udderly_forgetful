extends layout.pug
include utils.pug
append head
    link(rel="stylesheet" href="/stylesheets/leftnavbar.css")
    link(rel="stylesheet", href="/stylesheets/user-content.css")
    link(rel="stylesheet", href="/stylesheets/user-top-nav.css")
    script(src="/javascripts/leftnavbar.js" type="module" )
    script(src="/javascripts/user-top-nav.js" type="module")
    script(src="/javascripts/user-content.js" type="module")
block content
    div(class='top-nav-bar')
        div(class='hamburger-div')
            div(class='hamburger-container')
              span(class="material-icons material-icons-hover") menu
        div(class='searchbar-div')
          div(class="search-container")
            label(for="search-bar")
                span(class="material-icons" id="search-icon") search
            input(type='text' id='search-bar' name="search-bar")
        div(class='logout-div')
            div.logout-container
                div(class="material-icons material-icons-hover" id="logout-icon") logout
                    div#logout Sign out
    div(class="main-content")
        div(class='left-nav-bar')
            div(id="nav-bar-logo") Utterly Forgetful Logo
            ul(class='all-lists')
                li(id='all-tasks') All Tasks
                li(id='today') Today
                li(id='tomorrow') Tomorrow
                li(id='this-week') This Week
                li(id='trash') Trash
            ul(class='added-lists')
                li(class='list') Lists
                    each list in lists
                        li(class='added-list-children' id=list.id)= list.name
        div(class="task-container")
            div(class="task-content")
                div
                div(class="task-control-panel") To do tools
                div(class="add-task-form")
                    form(action='/api/tasks' method='post')
                        input(type='hidden' name='_csrf' value=csrfToken)
                        input(id="add-task-input" type="text" name="description" placeholder="Add a task...")
                        button(type='submit' id="add-task-button" class="hide-button") Add Task
                .added-tasks
                .empty-task-template
                    div(id="1")
                        .filled
                            input(type="checkbox")
                            p Testing
                    div(id="2")
                    div(id="3")
                    div(id="4")
                    div(id="5")
                    div(id="6")
                    div(id="7")
                    div(id="8")
                    div(id="9")
                    div(id="10")
                    div(id="11")
                    div(id="12")
                    div(id="13")
                    div(id="14")
                    div(id="15")
            div(class="task-details")
