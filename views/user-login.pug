extends layout.pug
include utils.pug
append head
        link(rel='stylesheet' href='/stylesheets/login.css')
        script(src="/javascripts/login.js" type="module")
block content
  body
    div(class="row")
      div(class="left-col")
        div(class="left")
          div(class="title-and-quote")
            img(src="../assets/images/logo3.png" id="login-page-image")
            p(id= "quote") â€œDo or do not. There is no try."<br>-Yoda
      div(class="right-col")
        div(class="right")
          div#no-account-link
            p: a(href='/users/signup' id='account-sign-up') Sign up for free
          div#form-content
            p#been-here-text Been here before? Welcome Back!
            +validationErrorSummary(errors)
            form(action='/users/login' method='post')
              input(type='hidden' name='_csrf' value=csrfToken)
              +field(null, 'email', email, null, "Email")
              +field(null, 'password', null, 'password', "Password")
              div(class='py-4')
                button(type='submit' class='btn btn-primary') Log in
                div.left-border-of-or
                p(id="orOption") OR
                div.right-border-of-or
                button(type='submit' class='demo-log') Demo-User
                a(href='/' class='btn btn-warning ml-2')
